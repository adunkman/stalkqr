nav-height = 3em
body-padding = 2em

background-gradient(start, end)
  background: -webkit-gradient(linear, left top, left bottom, from(start), to(end)); /* for webkit browsers */
  background: -moz-linear-gradient(top,  start,  end); /* for firefox 3.6+ */ 

body
  margin body-padding
  margin-top nav-height+body-padding

  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  color #222
  line-height 1.5em

nav
  position fixed
  top 0
  left 0
  width 100%
  height nav-height
  line-height nav-height

  background-color #222
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.5)
  color #999

  nav-item-padding = 0.5em

  ul
    margin 0
    padding 0 (body-padding - nav-item-padding)

    list-style-type none

  li 
    float left

    &.user 
      float right

      ul
        padding 0

        li
          float right
  
  p 
    margin 0

  a 
    display block
    margin 0 (nav-item-padding / 2)
    padding 0 (nav-item-padding / 2)

    color #8cc84b
    text-decoration none

    &:hover
      text-decoration underline

footer
  margin -(body-padding)
  margin-top body-padding
  padding (body-padding / 2) body-padding

  border-top 1px solid #ddd
  background-gradient #eee #fff
  color #888

  p 
    margin 0

#body
  a
    
    text-decoration none
    &:hover
      text-decoration underline

  h1
    font-size 3em
    font-family verdana
    margin-top 2em
    margin-bottom 10px

  ul.bulk_urls
    li
      float:left
      list-style-type:none
      margin:5px